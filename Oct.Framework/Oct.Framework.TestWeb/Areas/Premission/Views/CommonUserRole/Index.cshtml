@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Oct.Framework.MvcExt.Base
@using Oct.Framework.MvcExt.Extisions
@using Oct.Framework.TestWeb.Areas.Premission.Models;

@model List<CommonUserRoleDTO>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Index</h3>
    </div>

    <div class="panel-body">
        @Html.AuthedLink("<i class=\"fa fa-plus\"></i>&nbsp;新增", "Create", "CommonUserRole", "btn green btn-sm j-modal")
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>UserId</th>
                    <th>RoleId</th>
                    <th>CreateDate</th>
                    <th>ModifyDate</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Id</td>
                        <td>@m.UserId</td>
                        <td>@m.RoleId</td>
                        <td>@m.CreateDate</td>
                        <td>@m.ModifyDate</td>
                        <td>
                            @Html.AuthedLink("修改", "Edit", "CommonUserRole", "btn btn-sm link j-modal", null, new { id = m.Id })
                            @Html.AuthedLink("删除", "Delete", "CommonUserRole", "", new { onclick = "return confirm('确认删除吗？')" }, new { id = m.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="panel-footer">

        @{
            var pageModel = (PageModel)ViewBag.PM;
        }

        @Html.Pager("page", pageModel.CurrentPage, pageModel.PageSize, pageModel.Total, PageMode.Numeric)

    </div>
</div>

