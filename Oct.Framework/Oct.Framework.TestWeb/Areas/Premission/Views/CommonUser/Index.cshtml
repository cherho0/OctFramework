@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Oct.Framework.MvcExt.Base
@using Oct.Framework.MvcExt.Extisions

@model List<Oct.Framework.TestWeb.Areas.Premission.Models.CommonUserDTO>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Index</h3>
    </div>

    <div class="panel-body">
        @Html.AuthedLink("<i class=\"fa fa-plus\"></i>&nbsp;新增", "Create", "CommonUser", "btn green btn-sm j-modal")
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>用户名</th>
                    <th>姓名</th>
                    <th>状态</th>
                    <th>创建时间</th>
                    <th>最后修改时间</th>
                    <th>电话</th>
                    <th>邮箱</th>
                    <th>传真</th>
                    <th>QQ</th>
                    <th>地址</th>
                    <th>性别</th>
                    <th>手机</th>
                    <th>身份证号码</th>
                    <th>头像</th>
                    <th>最后登录时间</th>
                    <th>登录次数</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Account</td>
                        <td>@m.UserName</td>
                        <td>@m.Status</td>
                        <td>@m.CreateDate</td>
                        <td>@m.ModifyDate</td>
                        <td>@m.Phone</td>
                        <td>@m.Email</td>
                        <td>@m.Fax</td>
                        <td>@m.QQ</td>
                        <td>@m.Address</td>
                        <td>@m.Gander</td>
                        <td>@m.Mobile</td>
                        <td>@m.IDNumber</td>
                        <td>@m.Avatar</td>
                        <td>@m.LastLoginDate</td>
                        <td>@m.LoginCount</td>
                        <td>
                            @Html.AuthedLink("修改", "Edit", "CommonUser", "btn btn-sm link j-modal", null, new { id = m.Id })
                            @Html.AuthedLink("删除", "Delete", "CommonUser", "", new { onclick = "return confirm('确认删除吗？')" }, new { id = m.Id })

                            @Html.AuthedLink("用户授权", "Authorization", "CommonUser", "btn btn-sm link j-modal", null, new { userid = m.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="panel-footer">

        @{
            var pageModel = (PageModel)ViewBag.PM;
        }

        @Html.Pager("page", pageModel.CurrentPage, pageModel.PageSize, pageModel.Total, PageMode.Numeric)

    </div>
</div>

